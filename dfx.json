{
  "version": 1,
  "canisters": {
    "basic_bitcoin": {
      "build": "build.sh",
      "candid": "basic_bitcoin.did",
      "gzip": true,
      "metadata": [
        {
          "name": "candid:service",
          "path": "basic_bitcoin.did",
          "visibility": "public"
        }
      ],
      "package": "bitcoin-project",
      "type": "custom",
      "wasm": "target/wasm32-unknown-unknown/release/bitcoin_project.wasm",
      "init_arg": "(variant { testnet })"
    }
  },
  "defaults": {
    "bitcoin": {
      "enabled": true,
      "nodes": ["127.0.0.1:18444"]
    }
  },
  "networks": {
    "local": {
      "bind": "127.0.0.1:4943"
    }
  }
}
